    <%if(Posts){%>
   <% for(let i=0;i<Posts.length;i++) {%>
    <%let obj=Posts[i];%>
    <div class="bloggg">
        <img class="blog-img" src="images/tech<%= obj.imgid %>.jpg" alt="">
        <h1><%= obj.Name %></h1>
        <h4>-<%= obj.AuthorName %></h4>
        <p><%= obj.content %></p>
        <div class="buttons">
        <form action="/edit/<%= obj.id %>" method="post">
            <button class="btn" type="submit">Edit</button>
        </form>
        <form action="/delete/<%= obj.id %>" method="post">
            <button class="btn" type="submit">Delete</button>
        </form>
    </div>
    </div>
